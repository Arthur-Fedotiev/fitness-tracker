{
  "name": "shared-ui-components",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/components/src",
  "prefix": "ft",
  "tags": ["domain:shared", "type:ui"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ui/components"],
      "options": {
        "jestConfig": "libs/shared/ui/components/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/components/src/**/*.ts",
          "libs/shared/ui/components/src/**/*.html"
        ]
      }
    }
  }
}
