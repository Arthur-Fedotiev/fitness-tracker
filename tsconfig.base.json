{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fitness-tracker/auth/data": ["libs/auth/data/src/index.ts"],
      "@fitness-tracker/auth/feature": ["libs/auth/feature/src/index.ts"],
      "@fitness-tracker/auth/model": ["libs/auth/model/src/index.ts"],
      "@fitness-tracker/auth/ui": ["libs/auth/ui/src/index.ts"],
      "@fitness-tracker/exercises/data": ["libs/exercises/data/src/index.ts"],
      "@fitness-tracker/exercises/feature": [
        "libs/exercises/feature/src/index.ts"
      ],
      "@fitness-tracker/exercises/model": ["libs/exercises/model/src/index.ts"],
      "@fitness-tracker/exercises/ui": ["libs/exercises/ui/src/index.ts"],
      "@fitness-tracker/layout/feature": ["libs/layout/feature/src/index.ts"],
      "@fitness-tracker/layout/ui": ["libs/layout/ui/src/index.ts"],
      "@fitness-tracker/material": ["libs/material/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
