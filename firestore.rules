rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();

      allow create: if isAdmin();
      allow update: if isAdmin() || isExerciseBelongsToUser();
      allow delete: if isAdmin() || (isAuthenticated() && isExerciseBelongsToUser());

      match /translations/{translationId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin() || (isAuthenticated() && isExerciseBelongsToUser());
      }
    }

    match /muscles/{doc=**} {
      allow read: if isAuthenticated();

      allow write: if isAdmin();
    }

    match /equipment/{doc=**} {
      allow read: if isAuthenticated();

      allow write: if isAdmin();
    }

    match /exercise-types/{doc=**} {
      allow read: if isAuthenticated();

      allow write: if isAdmin();
    }

    match /workouts/{doc=**} {
      allow read: if isAuthenticated();

      allow write: if isAdmin();
    }

    match /{path=**}/translations/{id} {
      allow read: if isKnownUser();
      allow write: if isAdmin();
    }

    function isAdmin() {
      return isAuthenticated() && 'admin' in request.auth.token &&
      request.auth.token.admin == true;
    }

    function isAuthenticated() {
      return request.auth.uid !=null;
    }

    function isKnownUser() {
      return isAuthenticated() &&
      exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isValidExercise() {
      return isNonEmptyString('name') &&
      isNonEmptyString('exerciseType') &&
      isNonEmptyString('targetMuscle') &&
      isNonEmptyString('equipment') &&
      isNonEmptyString('avatarUrl');
    }

    function isNonEmptyString(fieldName) {
      return request.resource.data[fieldName] is string &&
      request.resource.data[fieldName].size() > 0;
    }

    function isExerciseBelongsToUser() {
      return request.resource.data.userId == request.auth.uid;
    }

    function isFitnessTrackerExercise() {
      return request.resource.data.userId == undefined || request.resource.data.userId == null;
    }
  }
}
